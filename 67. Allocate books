import java.util.* ;
import java.io.*; 
public class Solution {
    public static long ayushGivesNinjatest(int n, int m, int[] time) {
        // Write your code here.
        int l = 0;
        int h = 0;
        for(int i=0;i<m;i++){
            h+=time[i];
        }
        //System.out.println(l+ "  "+h);

        int ans = h;
        while(l<=h){
            int mid = (l+h)/2;


            int a = 0;
            int c = 1;
            
            for(int i=0;i<m;i++){
                //System.out.println(a+"..ac.."+c);
                if(time[i]>mid){
                    c = Integer.MAX_VALUE;
                    break;
                }
                if(time[i]==mid && a==0){
                    c++;
                }
                else if(a+time[i]>mid){
                    c++;
                    a = time[i];
                }
                else{
                    a += time[i];
                }
            }
          // System.out.println(c+ "  "+mid);
            if(c>n){
                l = mid+1;
            }
            else if(c<=n){
                ans = Math.min(ans, mid);

                h = mid-1;
            }
            
        }
        return ans;
    }
}
